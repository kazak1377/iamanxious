{
    "name": "Node.js & TypeScript",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
    "features": {
        "ghcr.io/audacioustux/devcontainers/bun": true
    },
    "forwardPorts": [
        "3000:3000"
    ],
    "postCreateCommand": "npm install -g @xata.io/cli && bun install && make git_setup",
    "customizations": {
        "vscode": {
            "extensions": [
                "EditorConfig.EditorConfig",
                "syler.sass-indented",
                "dbaeumer.vscode-eslint",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "Nuxtr.nuxtr-vscode",
                "esbenp.prettier-vscode",
                "YoavBls.pretty-ts-errors",
                "bradlc.vscode-tailwindcss",
                "macieklad.tailwind-sass-syntax",
                "Vue.volar"
            ]
        }
    }
}
